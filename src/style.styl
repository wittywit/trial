body {
  height: 100vh;
  background: #010101;
  cursor: none;
  margin: 0;
  display: flex;
  font-family: monospace;
  
  h1, p , a {
    color: #fff;
  }
  
  a {
    border-bottom: 2px solid #fff;
    padding: 10px 0;
    margin-top: 25px;
  }
  
  .cursor {
    pointer-events: none;
    
    &__ball {
      position: fixed;
      top: 0;
      left: 0;
      mix-blend-mode: difference;
      z-index: 1000;
      
      circle {
        fill: #f7f8fa;
      }
    }      
  } 
  
  .left, .right {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .right {
    background: #fff;
    
    a {
      border-bottom: 2px solid #000;
    }
    
    h1, p, a {
      color: #000;
    }
  }
}